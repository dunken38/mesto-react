.infowindow__cancel-button  {
  background-image: url(../../../images/cancelbutton.svg);
  background-color: transparent;
  background-size: cover;
  border: none;
  width: 32px;
  height: 32px;
  margin-left: 438px;
  transition: 0.3s;
}

.infowindow__cancel-button:hover  {
  cursor: pointer;
  opacity: 0.6;
  transition: 0.3s;
}

@media screen and (max-width: 894px) {
  .infowindow__cancel-button  {
    width: 26px;
    height: 26px;
    margin-left: 373px;
  }
}

@media screen and (max-width: 596px) {
  .infowindow__cancel-button  {
    width: 20px;
    height: 20px;
    margin-left: 262px;
  }
}